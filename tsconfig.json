{
  "extends": "@react-native/typescript-config",
  "include": [
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./src",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@stores/*": ["src/stores/*"],
      "@hooks/*": ["src/hooks/*"],
      "@screens/*": ["src/screens/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@dtos/*": ["src/dtos/*"],
      "@api/*": ["src/api/*"]
    }
  }
}